<Page x:ConnectionId='1'
    x:Class="ListApplication.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ListApplication"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data="using:ListApplication.Models"
                        
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <ListView x:ConnectionId='2' Name="MasterListView" 
                  IsItemClickEnabled="True"
                                                      
                                                >
            <ListView.ItemTemplate>
                <DataTemplate                         >
                    <StackPanel x:ConnectionId='15' Orientation="Horizontal" Margin="8,5,0,5">
                        <TextBlock x:ConnectionId='16'                     
                                   VerticalAlignment="Center"
                                   FontSize="16"
                                   Margin="8,0,0,0"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>


        <Grid x:ConnectionId='3' Name="DetailGrid" Grid.Column="1" Grid.Row="0" Margin="10,0,10,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:ConnectionId='4' Name="DetailNameTextBlock" FontSize="32" Grid.ColumnSpan="2" Grid.Column="0" Grid.Row="1"  Margin="10,0,0,10"/>
                <TextBlock x:ConnectionId='5' Name="LabelRel" FontSize="16" Grid.Row="2" Grid.Column="0" Visibility="Collapsed">Relationship:</TextBlock>
                <TextBlock x:ConnectionId='6' Name="DetailRelationshipTextBlock" FontSize="16" Grid.Row="2" Grid.Column="1" Margin="10,0,0,10"/>

                <TextBlock x:ConnectionId='7' Name="LabelAge" FontSize="16" Grid.Row="3" Grid.Column="0" Visibility="Collapsed">Age:</TextBlock>
                <TextBlock x:ConnectionId='8' Name="DetailAgeTextBlock" FontSize="16" Grid.Row="3" Grid.Column="1" Margin="10,0,0,10"/>

                <TextBlock x:ConnectionId='9' Name="LabelSex" FontSize="16" Grid.Row="4" Grid.Column="0" Visibility="Collapsed">Sex:</TextBlock>
                <TextBlock x:ConnectionId='10' Name="DetailSexTextBox" FontSize="16" Grid.Row="4" Grid.Column="1" Margin="10,0,0,10"/>

                <TextBlock x:ConnectionId='11' Name="LabelColour" FontSize="16"  Grid.Row="5" Grid.Column="0" Visibility="Collapsed">Fav. Colour:</TextBlock>
                <TextBlock x:ConnectionId='12' Name="DetailColourTextBlock" FontSize="16" Grid.Row="5" Grid.Column="1" Margin="10,0,0,10"/>

                <TextBlock x:ConnectionId='13' Name="LabelLocale" FontSize="16" Grid.Row="6" Grid.Column="0" Visibility="Collapsed">Lives In:</TextBlock>
                <TextBlock x:ConnectionId='14' Name="DetailLocaltionTextBlock" FontSize="16" Grid.Row="6" Grid.Column="1" Margin="10,0,0,0"/>


            </Grid>

        </Grid>

        <TextBlock Text="Created by: Jacob Fields"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Grid.ColumnSpan="2"
                   Grid.Row="2"/>
    </Grid>
</Page>

